<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <ToggleButton
            android:id="@+id/bus_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.90"
            android:textSize="0sp"
            android:drawableBottom="@drawable/bus_icon_large"/>

        <ToggleButton
            android:id="@+id/tube_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.90"
            android:layout_weight="1"
            android:textSize="0sp"
            android:drawableBottom="@drawable/tube_icon_large"/>

        <ToggleButton
            android:id="@+id/bike_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.90"
            android:layout_weight="1"
            android:textSize="0sp"
            android:drawableBottom="@drawable/bike_icon_large"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12sp"
        android:layout_marginLeft="12sp"
        android:alpha="0.85"
        android:visibility="visible" />

</RelativeLayout>
