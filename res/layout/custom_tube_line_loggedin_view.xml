<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:dividerHeight="5dp" 
    android:orientation="vertical"
    tools:context=".TubeLineActivity" >
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
            
	        <TextView
	            android:id="@+id/line_name_text"
	            android:layout_width="wrap_content"
	            android:layout_height="50dp"
	            android:textIsSelectable="false"
	            android:clickable="false"
	            android:textSize="25sp"
	            android:textStyle="bold" />

			<LinearLayout
		    	android:orientation="horizontal"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:gravity="right" 
		    	android:id="@+id/rating_layout">
			    
		        <Button
		            android:id="@+id/rate_button"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:text="@string/rate_button" />
	        </LinearLayout>

	    </LinearLayout>
	        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
			
	        <TextView
		        android:id="@+id/line_status_text"
		        android:layout_width="wrap_content"
		        android:layout_height="30dp"
		        android:textIsSelectable="true"
		        android:textSize="15sp"
		        android:textColor ="#cfcfcf"
		        android:textStyle="italic"
		        android:typeface="sans" />
	        
		    <LinearLayout
			    	android:orientation="horizontal"
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:gravity="right" 
			    	android:id="@+id/number_info_layout"> 
			    	
			    <RatingBar
			        android:id="@+id/rating_bar"
	           		android:layout_width="wrap_content"
	           		android:layout_height="match_parent"
	          		android:numStars="5"
	           		android:stepSize="0.1" 
	           		android:isIndicator="true"
	           		style="?android:attr/ratingBarStyleIndicator"
	           		/>	 
			    	
		    	<TextView 
		    		android:id="@+id/number_info_text"
			        android:layout_width="wrap_content"
			        android:layout_height="40sp"
			        android:textIsSelectable="false"
			        android:textSize="15sp"
			        android:textColor ="#cfcfcf"
			        android:shadowColor="#B5B5B5"
			        android:shadowRadius="1.0"
			        android:shadowDx="1.0"
			        android:shadowDy="1.0"
			        android:textStyle="bold"
			        android:typeface="sans" />    
		    </LinearLayout>
        
     	</LinearLayout>
        
    
</LinearLayout>